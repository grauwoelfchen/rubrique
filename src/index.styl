body
  background-color #323232
  font 1.42em
  font-family 'Krub', sans-serif
  height 100%
  margin 0
  padding 0

.container
  align-items center
  display flex
  height 100%
  justify-content center

.row
  height 100%
  width 55rem

.form-group
  bottom 0.231rem
  height 2.81rem
  padding 0
  position fixed
  margin-left -0.09rem
  width 52.9rem

.new.form-control
  background-color #222222
  border 1px solid #000000
  border-radius 0.18rem
  -webkit-box-shadow none
  box-shadow none
  color white
  margin 0
  outline none
  padding 0.81rem 1.026rem
  -webkit-transition all 0.2s linear
  transition all 0.2s linear
  width 100%

.todo-list
  position absolute
  bottom 3.24rem
  overflow auto
  display flex
  height 100%
  width 55rem
  flex-direction column-reverse
  list-style none
  margin 0
  padding 0

  li
    background #b8b8c8
    color #171719
    border-radius 0.11rem
    margin 0 0 0.428rem 0
    padding 0
    position relative
    word-break break-word

    &:hover
      color #d3e3f2
      background-color #a296c0

    &.done
      background #6c6480

      label
        color #cac1e2
        text-decoration line-through

        .checkbox-mask:after
          color #c582c5
          content '\2713'
          display block
          left 0
          position absolute
          top -3px

      &:hover
        color #d3e3f2
        background-color #9085ab

    .checkbox
      border-radius 0.1rem
      margin 0

    label
      display block
      padding 10px 15px

      &:hover
        color #363240
        cursor pointer

      input[type="checkbox"]
        visibility hidden

      .checkbox-mask
        border 1px solid #444444
        border-radius 0.13rem
        display block
        height 12px
        margin-left -0.21rem
        margin-top 0.21rem
        position absolute
        width 12px

    .close
      cursor pointer
      font-size 16px
      height 18px
      margin-top -0.76rem
      padding-left 0.11rem
      position absolute
      right 0.48rem
      top 50%
      width 1.56rem
      text-align center

      &:hover
        color #d3e3f2

    &.animated
      background-color #c3b8de

  input[type="checkbox"]
    opacity 0
    visibility hidden

.hidden
  display none
