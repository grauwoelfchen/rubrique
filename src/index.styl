$red = #bf4073

body
  background-color #323232
  font 1.42em
  font-family 'Krub', sans-serif
  height 100%
  margin 0
  padding 0

.container
  align-items center
  display flex
  height 100%
  justify-content center

.row
  height 100%
  width 100vw

.form-group
  bottom 0.231rem
  height 2.81rem
  padding 0.6rem 0.38rem 0.13rem 0.38rem
  position fixed
  margin-left -0.03rem
  width 100vw - 0.76rem

.new.form-control
  background-color #222222
  border 1px solid #000000
  border-radius 0.18rem
  -webkit-box-shadow none
  box-shadow none
  color white
  margin 0
  outline none
  padding 0.81rem 1.026rem
  width 100vw - 2.92rem + 0.03rem

.todo-list
  position absolute
  bottom 3.24rem
  overflow auto
  display flex
  height 100%
  width 100vw - (0.79rem + 0.03rem)
  flex-direction column-reverse
  list-style none
  margin 0
  padding 0.13rem 0.38rem

  li
    background #e2d3c4
    color #171719
    border 0
    border-radius 0.11rem
    margin 0 0 4px 0
    padding 0
    position relative
    word-break break-word

    &:hover
      color #d3e3f2
      background-color #ad7b9b

      .checkbox-mask
        border 1px solid #444444

    &.done
      background #806476

      label
        color #a686a4
        text-decoration line-through

        .checkbox-mask
          border 1px solid #545454

          &:after
            color darkgray
            content '\2713'
            display block
            left 0
            position absolute
            top -3px

      .first-letter
        color #a686a4
        text-decoration line-through

      &:hover
        color #d3e3f2
        background-color #ad7b9b

    .checkbox
      border-radius 0.1rem
      margin 0

    label
      display block
      padding 0.71rem 0.89rem

      &:hover
        color #363240
        cursor pointer

      input[type="checkbox"]
        visibility hidden

      .checkbox-mask
        border 1px solid #b48d65
        border-radius 0.13rem
        display block
        height 12px
        margin-left -0.21rem
        margin-top 0.21rem
        position absolute
        width 12px

    .first-letter
      color $red
      display inline-block
      margin 0
      padding 0

    .close
      cursor pointer
      font-size 16px
      height 18px
      margin-top -0.76rem
      padding-left 0.11rem
      position absolute
      right 0.48rem
      top 50%
      width 1.56rem
      text-align center

      &:hover
        color #d3e3f2

    &.animated
      background-color #c3b8de

  input[type="checkbox"]
    opacity 0
    visibility hidden

.hidden
  display none
